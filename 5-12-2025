import tkinter as tk
def multiplicar():
    num1 = entrada.get()
    num2 = entrada1.get()
    etiqueta_resultado.config(text=f"El area del triangulo es: {int(num1) * int(num2) /2}")
ventana = tk.Tk()
ventana.title("Area del triangulo")
ventana.geometry("400x200")
etiqueta = tk.Label(ventana, text="Ingresa la base:")
etiqueta.pack()
entrada = tk.Entry(ventana)
entrada.pack()
etiqueta1 = tk.Label(ventana, text="Ingresa la altura:")
etiqueta1.pack()
entrada1 = tk.Entry(ventana)
entrada1.pack()
boton = tk.Button (text="calcular area", command=multiplicar)
boton.pack()
boton = tk.Button (text="salir de la app", command=ventana.quit)
boton.pack()
etiqueta_resultado = tk.Label (ventana, text="")
etiqueta_resultado.pack()
ventana.mainloop()

        
