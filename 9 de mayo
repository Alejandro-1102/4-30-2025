import tkinter as tk
def sumar():
    num1 = float(entrada.get())
    num2 = float(entrada2.get())
    resultado = num1 + num2
    resultado_res.config(text=f"Resultado: {resultado}")
ventana = tk.Tk()
ventana.geometry("400x200")
ventana.config(bg="LightGreen")
ventana.title("Calculadora de Suma")
etiqueta1 = tk.Label(ventana, text="Número 1:", bg="LightGreen")
etiqueta1.pack()
entrada = tk.Entry(ventana)
entrada.pack()
etiqueta2 = tk.Label(ventana, text="Número 2:", bg="LightGreen")
etiqueta2.pack()
entrada2= tk.Entry(ventana)
entrada2.pack()
boton_sumar = tk.Button(ventana, text="Sumar", command=sumar)
boton_sumar.pack()
resultado_res = tk.Label(ventana, text="Resultado:", bg="LightGreen")
resultado_res.pack()
autor = tk.Label(ventana, text="Alejandro Gael Serrano Warner", bg="LightGreen", fg="black", font=("Arial", 7))
autor.pack(side="bottom", pady=5)
ventana.mainloop()
